# Django Configuration
DEBUG=False
SECRET_KEY=your-secret-key-from-secrets-manager

# Database Configuration (from Secrets Manager)
DB_HOST=your-rds-endpoint
DB_NAME=casevault_db
DB_USER=casevault_admin
DB_PASSWORD=your-db-password-from-secrets-manager
DB_PORT=5432

# AWS S3 Configuration
USE_S3=True
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=ap-southeast-1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-cloudfront-domain.cloudfront.net,https://your-custom-domain.com
ALLOWED_HOSTS=your-alb-dns-name.amazonaws.com,your-api-gateway-domain.execute-api.ap-southeast-1.amazonaws.com
